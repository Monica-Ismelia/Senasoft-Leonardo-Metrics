{
  "openapi": "3.1.0",
  "info": {
    "title": "SENASoft Metrics API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://senasoft-core-dev-h2erabc0hhbcg7ee.eastus2-01.azurewebsites.net"
    }
  ],
  "paths": {
    "/metrics/scalar": {
      "get": {
        "operationId": "getScalarData",
        "summary": "Obtener métricas escalares de SENASoft",
        "responses": {
          "200": {
            "description": "Lista de métricas generales",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "description": { "type": "string" },
                      "value": { "type": ["number", "string", "null"] }
                    },
                    "required": ["description", "value"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/metrics/detailed/{metricType}": {
      "get": {
        "operationId": "getDetailedMetrics",
        "summary": "Obtener métricas detalladas (por centro, GitHub, inglés, etc.)",
        "parameters": [
          {
            "name": "metricType",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "by-center",
                "recommended-instructors",
                "by-center-and-program",
                "by-department",
                "with-github",
                "english-b1-b2"
              ]
            },
            "description": "Tipo de métrica detallada a obtener"
          }
        ],
        "responses": {
          "200": {
            "description": "Datos detallados según el tipo solicitado",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    { "type": "array", "items": { "type": "object" } },
                    { "type": "object" }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
